<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.school.mybatis.mappers.ClassesMapper">
  <resultMap id="ClassesResult" type="com.solvd.school.models.Classes">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
  </resultMap>

  <select id="getById" parameterType="int" resultMap="ClassesResult">
    SELECT id, name FROM classes WHERE id = #{id}
  </select>

  <select id="getByName" parameterType="string" resultMap="ClassesResult">
    SELECT id, name FROM classes WHERE name = #{name}
  </select>

  <select id="getAll" resultMap="ClassesResult">
    SELECT id, name FROM classes ORDER BY id
  </select>

  <insert id="insert" parameterType="com.solvd.school.models.Classes" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
    INSERT INTO classes (name) VALUES (#{name})
  </insert>

  <update id="update" parameterType="com.solvd.school.models.Classes">
    UPDATE classes SET name = #{name} WHERE id = #{id}
  </update>

  <delete id="delete" parameterType="int">
    DELETE FROM classes WHERE id = #{id}
  </delete>
</mapper>
