<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.school.mybatis.mappers.GeneratedSchedulesMapper">
  <resultMap id="GeneratedScheduleResult" type="com.solvd.school.models.GeneratedSchedule">
    <id property="id" column="id"/>
    <result property="generationId" column="generation_id"/>
    <result property="lessonId" column="lesson_id"/>
  </resultMap>

  <select id="getByGeneration" parameterType="int" resultMap="GeneratedScheduleResult">
    SELECT id, generation_id, lesson_id
    FROM generated_schedules WHERE generation_id = #{generationId}
    ORDER BY id
  </select>

  <insert id="insert" parameterType="com.solvd.school.models.GeneratedSchedule" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
    INSERT INTO generated_schedules (generation_id, lesson_id)
    VALUES (#{generationId}, #{lessonId})
  </insert>

  <delete id="delete" parameterType="int">
    DELETE FROM generated_schedules WHERE id = #{id}
  </delete>
</mapper>
